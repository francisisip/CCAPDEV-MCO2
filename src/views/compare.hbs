<div class="main-container">
    <div class = "profile-container">
        <div class = "profile" id = "profile">
            <a class = "profile-photo-container">
                <img class="profile-icon" src="{{}}" alt="">
            </a>
            <br>  
            <a>
            <p class = "profile-name">{{user.username}}</p>
            </a>
            <p>-------------------------------------</p>
            <p class = "names" id = "fName">{{ser.firstname}}</p> 
            <p class = "names" id = "lName">{{user.lastname}}</p>
            <p id = "eMail">{{user.email}}</p>
            <p id = "password">{{user.password}}</p>
            <p id = "bio">{{user.bio}}</p>
            <p>-------------------------------------</p>
                <ul class="nav profile">
                    {{#if isCurrentUser}}
                    <li class="nav-item">
                        <a class="nav-link" data-bs-toggle="pill" href="#edit-info">Edit profile info</a>
                    </li>
                    {{/if}}
                    <li class="nav-item">
                        <a class="nav-link active" data-bs-toggle="pill" href="#view-posts">View Posts </a>
                    </li>
                    <li class="nav-item">
                         <a class="nav-link" data-bs-toggle="pill" href="#view-comments">View Comments</a>
                    </li>
                </ul>
        </div>
    </div>

            <!--main forum content-->
            <div class="content-container">
                <div id = "edit-info" class ="tab-pane fade">
                    <div class="form-section">
                        <form method="post" id = "form" enctype="multipart/form-data">
                            <h1>Edit Profile</h1>
                            <div class="form-group col">
                                <label for="profilePicture">Upload Profile picture:</label>
                                <input type="file" class="form-control" id="pfpupload" accept="image/*"> <br>
                                <div class = "edit-pfp-display">
                                    <img id="profilePictureDisplay" class="profile-picture" src="../images/icon.jpg" alt="Profile Picture">
                                </div>
                            </div>
                            <div class="form-row">
                              <div class="form-group col">
                                <label for="firstName">First Name:</label>
                                <input type="text" id="firstName" name="firstName" placeholder= {{user.firstname}}>
                              </div>
                          
                              <div class="form-group col">
                                <label for="lastName">Last Name:</label>
                                <input type="text" id="lastName" name="lastName" placeholder={{user.lastname}}>
                              </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col">
                                  <label for="password">Old Password:</label>
                                  <input type="password" id="opassword" name="password" placeholder="Enter old password">
                                </div>
                            
                                <div class="form-group col">
                                  <label for="confirmPassword">Confirm Old Password:</label>
                                  <input type="password" id="coPassword" name="confirmPassword" placeholder="Confirm old password">
                                </div>
                            </div>

                            <div class="form-row">
                              <div class="form-group col">
                                <label for="password">New Password:</label>
                                <input type="password" id="npassword" name="password" placeholder="Enter new password">
                              </div>
                          
                              <div class="form-group col">
                                <label for="confirmPassword">Confirm New Password:</label>
                                <input type="password" id="cnPassword" name="confirmPassword" placeholder="Confirm new password">
                              </div>
                            </div>
                          
                            <div class="form-row">
                              <div class="form-group col">
                                <label for="email">Email:</label>
                                <input type="email" id="email" name="email" placeholder={{user.email}}>
                              </div>
                          
                              <div class="form-group col">
                                <label for="confirmEmail">Confirm Email:</label>
                                <input type="email" id="confirmEmail" name="confirmEmail" placeholder={{user.email}}>
                              </div>
                            </div>
                          
                            <div class="form-group">
                              <label for="bio">Edit Bio:</label>
                              <textarea id="edit-bio" name="bio" rows="2" cols="50" placeholder={{user.bio}}></textarea>
                            </div>
                          
                            <input type="submit" value="Save Changes" id = "submit" onsubmit= "submitEditProfile()">
                            <button type="button" class="cancel" onclick="cancelForm()">Cancel</button>
                          </form>
                    </div>
                </div>

                <div id = "view-posts" class = "tab-pane fade show active">
                    <div class="posts-container" id="posts-container">
                        <!-- CONTENT OF POSTS WILL BE LOADED-->

                        {{#for posts.}}
                        {{#if posts.length}}
                            {{#each posts}}
                                {{> posts}}
                            {{/each}}
                        <div class="see-more-container" id="see-more-container">
                             <!-- SEE MORE BUTTON -->
                            <button type="button" class="btn btn-secondary" id="see-more" onclick="loadMore()">See More</button>
                        </div>
                        {{else}}
                        {{/if}}
                    </div>
                </div>
                <div id = "view-comments" class ="tab-pane fade">
                    {{#if comments.length}}
                        {{#each comments}}
                            <div class="up2">
                                {{> comment}}
                        {{/each}}
                            </div>
                     {{else}}
                     {{/if}}    
                </div>